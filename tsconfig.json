{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@database/*": ["prisma/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "jest.config.ts"
  ],
}
